            right = 1
            down = 2
            left = 3
            direction = Math.floor(Math.random() * 4)
            if (timer > 0) {
                if (direction == 0) {
                    directionBox.innerHTML = 'Up'
                } else if (direction == 1) {
                    directionBox.innerHTML = 'Right'
                } else if (direction == 2) {
                    directionBox.innerHTML = 'Down'
                } else {
                    directionBox.innerHTML = 'Left'
                }
            }


        }

    </script>

</body>

