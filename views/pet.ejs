<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet</title>

    <style>
        #mainPage {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: cornflowerblue;
        }

        #petBox {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            top: 50%;
            transform: translate(-50%, -50%);
            width: 200px;
            height: 200px;
            background-color: lightgreen;
            border: 5px solid;
            border-color: darkgreen;
            border-radius: 15px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        #petContainer {
            position: absolute;
            left: center;
            top: 90%;
            flex-direction: row;
            align-items: center;
            justify-content: space-evenly;
            display: flex;
            width: 100%;
            height: 10%;
            background-color: burlywood;
        }

        .interactionButton {
            position: relative;
            width: 30%;
            height: 90%;
            top: center;
            background-color: moccasin;
            border: 5px solid;
            border-color: chocolate;
            border-radius: 15px;
            font-size: calc(20px + 4vmin);
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            font-style: italic;
            font-family: 'Comic Sans MS', cursive, sans-serif;
            color: chocolate;
        }

        #petMessageContainer {
            position: absolute;
            left: center;
            top: 80%;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100px;
            background-color: lightblue;
            overflow-y: scroll;
        }
    </style>
</head>

<body>
    <div id="mainPage">
        <div id="contentBox" style="overflow-y: scroll;">
            <div id="petBox">
                <img src="https://www.pngitem.com/pimgs/m/146-1468479_my-cute-pet-dog-puppy-dog-png-transparent.png"
                    alt="Pet" style="width: 200px; height: 200px; border-radius: 15px;">
                    <div id="petSatiated"> 100% Satiated</div>
                    <div id="petHappiness"> 100% Happiness</div>
    
            </div>
            <div id="petMessageContainer">

            </div>
            <div id="petContainer">
                <button class="interactionButton" id="feedButton" onclick="">Feed</button>
                <button class="interactionButton" id="playButton" onclick="">Play</button>
                <button class="interactionButton" id="cleanButton" onclick="">Clean</button>
            </div>
        </div>
    </div>
    <script>
        var petMessageContainer = document.getElementById("petMessageContainer");
        var petSatiated = document.getElementById("petSatiated");
        var petHappiness = document.getElementById("petHappiness");
        var petSatiatedValue = 100;
        var petHappinessValue = 100;
        var PetHungerDecrement = setInterval(satiationDown, 5000);
        var PetHappinessDecrement = setInterval(happinessDown, 1000);
        var PetStatusUpdate = setInterval(petStatus, 10000);
        var feedButton = document.getElementById("feedButton");
        var playButton = document.getElementById("playButton");
        feedButton.addEventListener("click", feedPet);
        playButton.addEventListener("click", playWithPet);

        function petMessage(message) {
            const messageElement = document.createElement('div');
            messageElement.innerText = message;
            petMessageContainer.appendChild(messageElement);
            messageElement.scrollIntoView({ behavior: 'smooth', block: 'end' });
        }

        function petStatus() {
            let statusMessage = "Pet Status: ";
            if (petSatiatedValue >= 80 && petHappinessValue >= 80) {
                statusMessage += "Your pet is very happy and well-fed!";
            } else if (petSatiatedValue >= 80) {
                statusMessage += "Your pet is well-fed but could use more playtime.";
            } else if (petHappinessValue >= 80) {
                statusMessage += "Your pet is happy but could use more food.";
            } else {
                statusMessage += "Your pet needs more attention.";
            }
            petMessage(statusMessage);
        }

        function happinessDown() {
            if (petHappinessValue > 0) {
                petHappinessValue--;
                petHappiness.innerHTML = petHappinessValue + "% Happiness";
            }
        }

        function playWithPet() {
            if (petSatiatedValue >= 5) {
                petSatiatedValue -= 5;
                petSatiated.innerHTML = petSatiatedValue + "% Satiated";
                petMessage('Your pet had fun, but is more hungry now...');
                petHappinessValue += 10;
                if (petHappinessValue > 100) {
                    petHappinessValue = 100;
                }
                petHappiness.innerHTML = petHappinessValue + "% Happiness";
            }
        }

        function satiationDown() {
            if (petSatiatedValue > 0) {
                petSatiatedValue--;
                petSatiated.innerHTML = petSatiatedValue + "% Satiated";
            }
        }

        function feedPet() {
            petSatiatedValue += 10;
            if (petSatiatedValue > 100) {
                petSatiatedValue = 100;
            }
            petSatiated.innerHTML = petSatiatedValue + "% Satiated";
            petMessage('Your pet is a little less hungry now...');
        }
    </script>
</body>

</html>